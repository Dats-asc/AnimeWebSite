@model AnimeWebSite.Models.Autithication

<!DOCTYPE html>
<html>
   <head>
       <link href="~/css/Styles.css" rel="stylesheet" type="text/css"/>
       <meta charset="UTF-8">
       <title>ClownS</title>
       <link rel="shortcut icon" href="">
   </head>

<body>
<section class="login_main">
    <div class="container">
        <form  asp-action="Login" asp-controller="Auth" asp-antiforgery="true">
            <div class="page_for_enter">
                <div class="enter_to_account">Войти в аккаунт</div>
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div class="log_fields">
                    <input class="login_field" type="text" placeholder="Логин" asp-for="Email">
                    <input class="password_field" type="password" placeholder="Пароль" asp-for="Password">
                </div>
                <div class="btns">
                    <button type="submit" class="enter">Submit</button>
                    <button class="register">
                        <a class="djfv" asp-controller="Auth" asp-action="Login">Зарегистрироваться</a>
                    </button>
                </div>
            </div>
        </form>
    </div>
</section>
</body>
</html>